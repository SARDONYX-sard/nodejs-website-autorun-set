{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["ESNext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017"
  },
  "include": ["./src/**/*", "src/selenium/env.ts"],
  "exclude": ["node_modules", "./src/**/*.spec.ts"]
}
